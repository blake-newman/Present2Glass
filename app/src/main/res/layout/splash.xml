<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:keepScreenOn="true"
    android:id="@+id/relativeLayout">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/glass_ip"
        android:id="@+id/title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:alpha="0.7"
        android:layout_above="@+id/glass_ip"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/glass_ip"
        android:textSize="30sp"
        android:layout_above="@+id/tap_for_options"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />

    <TextView
        android:id="@+id/tap_for_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/tip_margin_bottom"
        android:text="@string/tap_for_options"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
</RelativeLayout>